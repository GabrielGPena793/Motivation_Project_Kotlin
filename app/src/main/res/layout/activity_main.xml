<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingBottom="16dp"
        android:paddingHorizontal="50dp"
        android:background="@color/purple_500">

        <ImageView
            android:id="@+id/image_infinity"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:tint="@color/white"
            android:src="@drawable/icon_infinity"
            android:layout_marginEnd="100dp"
            />

        <ImageView
            android:id="@+id/image_happy_face"
            android:layout_toEndOf="@id/image_infinity"
            app:tint="@color/purple_800"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="100dp"
            android:src="@drawable/icon_happy_face" />

        <ImageView
            android:id="@+id/image_sun"
            app:tint="@color/purple_800"
            android:layout_toEndOf="@id/image_happy_face"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/icon_sun" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ola_kotlin"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="14dp"
        android:gravity="center"
        android:text="Riscos devem ser corridos, porque o maior perigo é não arriscar nada!"
        android:textSize="20sp"
        android:layout_marginTop="200dp"
        android:textColor="@color/black"
        />

    <View
        android:layout_width="140dp"
        android:layout_height="3dp"
        android:layout_marginTop="32dp"
        android:background="@color/purple_500"
        android:layout_gravity="center_horizontal"
        android:elevation="5dp"
        />

    <Button
        android:id="@+id/button_new_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nova_frase"
        android:backgroundTint="@color/purple_800"
        android:textStyle="bold"
        android:layout_marginTop="180dp"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>